{
  "family": "advisor-app-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::540738452774:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "advisor-app",
      "image": "540738452774.dkr.ecr.us-east-1.amazonaws.com/advisor-app:latest",
      "portMappings": [
        {
          "containerPort": 8501,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "secrets": [
        {
          "name": "POE_API_KEY",
          "valueFrom": "/advisor-app/poe-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/advisor-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
